{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string"
    },
    "webSubnetPrefix": {
      "type": "string"
    },
    "appSubnetPrefix": {
      "type": "string"
    },
    "appGatewaySubnetPrefix": {
      "type": "string"
    },
    "webSubnetName": {
      "type": "string"
    },
    "appSubnetName": {
      "type": "string"
    },
    "appGatewaySubnetName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('vnetName'), '/', parameters('webSubnetName'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressPrefix": "[parameters('webSubnetPrefix')]"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('vnetName'), '/', parameters('appSubnetName'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressPrefix": "[parameters('appSubnetPrefix')]"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2021-02-01",
      "name": "[concat(parameters('vnetName'), '/', parameters('appGatewaySubnetName'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressPrefix": "[parameters('appGatewaySubnetPrefix')]"
      }
    }
  ]
}
